<div class="row">
  <div class="seven columns">
    <h3>Vôos</h3>

    <%- if @passages -%>
    <table style="width:100%;">
      <thead>
        <tr>
          <td width="1"></td>
          <td>Empresa</td>
          <td>Escalas</td>
          <td>Valor</td>
        </tr>
      </thead>
      <tbody>
        <%- if @passages.size > 0 -%>
        <%- @passages.each do |passage| -%>
        <tr>
          <td><input type="radio" name="passage" data-value="<%= passage[:price] %>"></td>
          <td><%= passage[:name] %></td>
          <td><%= passage[:scales] %></td>
          <td><%= passage[:mask] %> <%= passage[:price] %></td>
        </tr>
        <%- end -%>
        <%- else -%>
        <tr>
          <td colspan="4">Nenhum vôo foi encontrado de ida e volta para o destino selecionado.</td>
        </tr>
        <%- end -%>
      </tbody>
    </table>
    <%- end -%>

    <h3>Hoteis</h3>

    <%- if @hotels -%>
    <table style="width:100%;">
      <thead>
        <tr>
          <td width="1"></td>
          <td>Local</td>
          <td>Diárias</td>
          <td>Valor</td>
        </tr>
      </thead>
      <tbody>
        <% if @hotels.size > 0 %>
        <%- @hotels.each do |hotel| -%>
        <tr>
          <td><input type="radio" name="hospedagem" data-value="<%= hotel[:price] %>"></td>
          <td><%= hotel[:name] %></td>
          <td><%= hotel[:diarias] %></td>
          <td><%= hotel[:price] %></td>
        </tr>
        <%- end -%>
        <%- else -%>
        <tr>
          <td colspan="4">Nenhum hotel foi encontrado para o destino selecionado.</td>
        </tr>
        <%- end -%>
      </tbody>
    </table>
    <%- end -%>
    
     <h3>Restaurantes</h3>

      <%- if @restaurants -%>
      <table style="width:100%;">
        <thead>
          <tr>
            <td width="1"></td>
            <td>Local</td>
            <td>Valor</td>
          </tr>
        </thead>
        <tbody>
          <% if @restaurants.size > 0 %>
          <%- @restaurants.each do |restaurant| -%>
          <tr>
            <td><input type="radio" name="hospedagem" data-value="<%= restaurant[:price] %>"></td>
            <td><%= restaurant[:name] %></td>
            <td><%= restaurant[:price] %></td>
          </tr>
          <%- end -%>
          <%- else -%>
          <tr>
            <td colspan="3">Nenhum restaurante foi encontrado para esse destino.</td>
          </tr>
          <%- end -%>
        </tbody>
      </table>
      <%- end -%>

  </div>
  <div class="five columns">
    <h3>Detalhes</h3>
    <table style="width:100%">
      <tr>
        <td>Passagem</td>
        <td class="passagem">R$ 0,00</td>
      </tr>
      <tr>
        <td>Hospedagem</td>
        <td class="hospedagem">R$ 0,00</td>
      </tr>
      <tr>
        <td>Refeições</td>
        <td class="refeicoes">R$ 0,00</td>
      </tr>
      <tr>
        <td>Total</td>
        <td><strong class="total">R$ 0,00</strong></td>
      </tr>
    </table>
  </div>
</div>
